<%= form_with(url: new_location_path, model: location, local: true) do |form| %>
<div class="field">
  <%= form.select :car_id, Car.where(user_id: current_user.id).collect { |p| [ p.plate_number, p.id ] }, blank: 'Pick someone' %>
</div>
<%= form.hidden_field :latitude, :id => "demo" %>
<%= form.hidden_field :longitude, :id => "demo" %>

 <p id="demo">Click the button to get your coordinates:</p>
<button onclick="getLocation()">Find me</button>
<div id="currentLat"></div>
<div id="currentLon"></div>
<% end %>
